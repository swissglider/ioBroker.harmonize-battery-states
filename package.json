{
  "name": "iobroker.harmonize-battery-states",
  "version": "1.0.3",
  "description": "Do have marmonized battery states this adapter do it for you",
  "author": {
    "name": "Swissglider",
    "email": "npm@swissglider.com"
  },
  "homepage": "https://github.com/swissglider/ioBroker.harmonize-battery-states",
  "license": "MIT",
  "keywords": [
    "availability",
    "battery",
    "devices",
    "iot",
    "alarm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/swissglider/ioBroker.harmonize-battery-states.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.4.0"
  },
  "devDependencies": {
    "@iobroker/testing": "^2.3.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/gulp": "^4.0.7",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.5",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "axios": "^0.21.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gulp": "^4.0.2",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "@alcalzone/release-script": "^1.7.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "build/main.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts src",
    "release": "release-script",
    "deployToServer": "./scripts/deploy.sh"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/swissglider/ioBroker.harmonize-battery-states/issues"
  },
  "readmeFilename": "README.md"
}
